<ContentDialog x:Class="EventHandlingExample.Controls.AuthenticationContentDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:authControl="using:AuthControl.Controls"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               xmlns:i="using:Microsoft.Xaml.Interactivity"
               xmlns:core="using:Microsoft.Xaml.Interactions.Core"
               mc:Ignorable="d"
               d:DesignHeight="300"
               d:DesignWidth="400">
    <Grid>
        <authControl:AuthControl>
            <i:Interaction.Behaviors>
                <core:EventTriggerBehavior EventName="UserLogged">
                    <core:EventTriggerBehavior.Actions>
                        <core:InvokeCommandAction Command="{x:Bind UserLoggedCommand, Mode=OneWay}"/>
                    </core:EventTriggerBehavior.Actions>
                </core:EventTriggerBehavior>
            </i:Interaction.Behaviors>
        </authControl:AuthControl>
    </Grid>
</ContentDialog>
